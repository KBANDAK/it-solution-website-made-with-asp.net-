<header class="main-header">
    <div class="container d-flex justify-content-between align-items-center">
        <a href="/" class="logo">
            <img src="~/Content/images/Logo_SecuDev.png" alt="SecuDev Logo" class="logo-img" />
        </a>

        <!-- Mobile menu toggle button -->
        <button class="mobile-menu-toggle" type="button" aria-label="Toggle navigation">
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
        </button>

        <nav class="nav-links">
            <a href="@Url.Action("Index", "Home")" class="nav-link">Home</a>
            <a href="@Url.Action("About", "Home")" class="nav-link">About</a>
            <a href="@Url.Action("Services", "Home")" class="nav-link">Services</a>
            <a href="@Url.Action("Contact", "Home")" class="nav-link">Contact</a>
        </nav>

        <div class="header-auth">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</header>

<style>
    .main-header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background-color: rgba(13, 17, 23, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(0, 255, 247, 0.1);
        z-index: 1000;
        padding: 0;
    }

    .container {
        max-width: 1440px;
        margin: 0 auto;
        padding: 15px 20px;
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo-img {
        height: 50px;
        width: auto;
        transition: transform 0.3s ease;
    }

    .logo:hover .logo-img {
        transform: scale(1.05);
    }

    .mobile-menu-toggle {
        display: none;
        flex-direction: column;
        background: none;
        border: none;
        cursor: pointer;
        padding: 8px;
        gap: 4px;
        z-index: 1001;
        position: relative;
    }

    .hamburger-line {
        width: 25px;
        height: 3px;
        background-color: #cbd5e1;
        transition: all 0.3s ease;
        border-radius: 2px;
    }

    .mobile-menu-toggle:hover .hamburger-line {
        background-color: #00FFF7;
    }

    .mobile-menu-toggle.active .hamburger-line:nth-child(1) {
        transform: rotate(45deg) translate(6px, 6px);
        background-color: #00FFF7;
    }

    .mobile-menu-toggle.active .hamburger-line:nth-child(2) {
        opacity: 0;
    }

    .mobile-menu-toggle.active .hamburger-line:nth-child(3) {
        transform: rotate(-45deg) translate(6px, -6px);
        background-color: #00FFF7;
    }

    .nav-links {
        display: flex;
        gap: 30px;
        align-items: center;
        margin: 0;
    }

    .nav-link {
        color: #cbd5e1;
        text-decoration: none;
        font-family: 'Share Tech Mono', monospace;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.3s ease;
        position: relative;
        padding: 8px 0;
    }

    .nav-link:hover {
        color: #00FFF7;
        text-shadow: 0 0 8px rgba(0, 255, 247, 0.5);
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, #00FFF7, rgba(0, 255, 247, 0.5));
        transition: width 0.3s ease;
    }

    .nav-link:hover::after {
        width: 100%;
    }

    .header-auth {
        display: flex;
        align-items: center;
    }

    /* Tablet styles */
    @@media (max-width: 1024px) {
        .container {
            padding: 12px 15px;
        }

        .nav-links {
            gap: 20px;
        }

        .nav-link {
            font-size: 13px;
        }

        .logo-img {
            height: 45px;
        }
    }

    /* Mobile landscape and below */
    @@media (max-width: 768px) {
        .mobile-menu-toggle {
            display: flex !important;
            order: 3;
        }

        .header-auth {
            order: 2;
            margin-right: 10px;
        }

        .nav-links {
            position: fixed;
            top: 0;
            right: -100%;
            width: 280px;
            height: 100vh;
            background-color: rgba(13, 17, 23, 0.98);
            backdrop-filter: blur(15px);
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            padding-top: 80px;
            gap: 25px;
            transition: right 0.3s ease;
            border-left: 1px solid rgba(0, 255, 247, 0.1);
            z-index: 1000;
        }

        .nav-links.active {
            right: 0;
        }

        .nav-link {
            font-size: 16px;
            padding: 15px 20px;
            width: 100%;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .nav-link::after {
            display: none;
        }

        .nav-link:hover {
            background-color: rgba(0, 255, 247, 0.1);
        }

        .container {
            padding: 10px 15px;
        }

        .logo-img {
            height: 40px;
        }
    }

    /* Small mobile */
    @@media (max-width: 480px) {
        .container {
            padding: 8px 10px;
        }

        .nav-links {
            width: 100vw;
            right: -100vw;
        }

        .nav-links.active {
            right: 0;
        }

        .nav-link {
            font-size: 18px;
            padding: 20px;
        }

        .logo-img {
            height: 35px;
        }

        .mobile-menu-toggle {
            padding: 6px;
        }

        .hamburger-line {
            width: 22px;
            height: 2px;
        }
    }

    /* Very small screens */
    @@media (max-width: 320px) {
        .container {
            padding: 6px 8px;
        }

        .logo-img {
            height: 30px;
        }

        .mobile-menu-toggle {
            padding: 4px;
        }

        .hamburger-line {
            width: 20px;
        }
    }

    /* Overlay for mobile menu */
    .main-header-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.5);
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
        z-index: 999;
    }

    .main-header-overlay.active {
        opacity: 1;
        visibility: visible;
    }
</style>

<script>
    (function () {
        'use strict';

        function initMobileMenu() {
            const mobileToggle = document.querySelector('.mobile-menu-toggle');
            const navLinks = document.querySelector('.nav-links');
            const header = document.querySelector('.main-header');
            const navLinksItems = document.querySelectorAll('.nav-link');

            // Create overlay element
            let overlay = document.querySelector('.main-header-overlay');
            if (!overlay) {
                overlay = document.createElement('div');
                overlay.className = 'main-header-overlay';
                document.body.appendChild(overlay);
            }

            if (!mobileToggle || !navLinks) {
                console.error('Mobile menu elements not found');
                return;
            }

            console.log('Mobile menu initialized'); // Debug log

            // Toggle mobile menu
            mobileToggle.addEventListener('click', function (e) {
                e.preventDefault();
                e.stopPropagation();

                console.log('Mobile toggle clicked'); // Debug log

                const isActive = mobileToggle.classList.contains('active');

                if (isActive) {
                    closeMobileMenu();
                } else {
                    openMobileMenu();
                }
            });

            function openMobileMenu() {
                mobileToggle.classList.add('active');
                navLinks.classList.add('active');
                overlay.classList.add('active');
                document.body.style.overflow = 'hidden';
                console.log('Menu opened'); // Debug log
            }

            function closeMobileMenu() {
                mobileToggle.classList.remove('active');
                navLinks.classList.remove('active');
                overlay.classList.remove('active');
                document.body.style.overflow = '';
                console.log('Menu closed'); // Debug log
            }

            // Close menu when clicking on nav links
            navLinksItems.forEach(link => {
                link.addEventListener('click', function () {
                    closeMobileMenu();
                });
            });

            // Close menu when clicking on overlay
            overlay.addEventListener('click', function () {
                closeMobileMenu();
            });

            // Close menu on window resize if it's larger than mobile breakpoint
            window.addEventListener('resize', function () {
                if (window.innerWidth > 768) {
                    closeMobileMenu();
                }
            });

            // Handle escape key
            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape' && navLinks.classList.contains('active')) {
                    closeMobileMenu();
                }
            });
        }

        // Initialize when DOM is ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initMobileMenu);
        } else {
            initMobileMenu();
        }
    })();
</script>