@using IT_Solution_Platform.Models
@model LoginViewModel

@{
    ViewBag.Title = "Log In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-page">
    <!-- Background Elements -->
    <div class="bg-elements">
        <div class="grid-plane"></div>
        <div class="glow glow-primary"></div>
        <div class="glow glow-accent"></div>
        <div class="tech-rings">
            <div class="ring ring-outer"></div>
            <div class="ring ring-middle"></div>
            <div class="ring ring-inner"></div>
            <div class="pulse-dot"></div>
        </div>
        <div class="particles-container" id="particles-js"></div>
    </div>

    <!-- Login Content -->
    <div class="container">
        <div class="login-section">
            <div class="login-wrapper" data-aos="fade-up" data-aos-delay="400">
                <div class="login-form">
                    <div class="form-header">
                        <h3>Welcome Back</h3>
                        <p>Securely access your account</p>
                    </div>

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form-content", id = "login-form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "validation-summary" })

                        <div class="form-field">
                            <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-input", placeholder = "Email Address" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            <div class="focus-indicator"></div>
                        </div>

                        <div class="form-field">
                            <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-input", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            <div class="focus-indicator"></div>
                        </div>

                        <div class="form-field remember-field">
                            <label class="checkbox-container">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                <span class="checkmark"></span>
                                Remember me
                            </label>
                        </div>

                        <button type="submit" class="submit-btn">
                            <span class="btn-text">Log In</span>
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                                <polyline points="12 5 19 12 12 19"></polyline>
                            </svg>
                            <span class="loading-spinner"></span>
                        </button>

                        <div class="form-footer">
                            <p>Don't have an account? @Html.ActionLink("Register", "Register", "Account", null, new { @class = "register-link" })</p>
                            <p>@Html.ActionLink("Forgot Password?", "ForgotPassword", "Account", null, new { @class = "forgot-password-link" })</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $("#login-form").validate({
                rules: {
                    Email: {
                        required: true,
                        email: true
                    },
                    Password: {
                        required: true,
                        minlength: 6
                    }
                },
                messages: {
                    Email: {
                        required: "Please enter your email address",
                        email: "Please enter a valid email address"
                    },
                    Password: {
                        required: "Please enter your password",
                        minlength: "Your password must be at least 6 characters long"
                    }
                }
            });
        });
    </script>
}
