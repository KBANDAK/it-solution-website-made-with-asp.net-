@model IT_Solution_Platform.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles {
    <link href="~/Content/auth/signup.css" rel="stylesheet" />
}

<div class="signup-page">
    <!-- Background elements -->
    <div class="bg-elements">
        <div class="grid-plane"></div>
        <div class="glow glow-primary"></div>
        <div class="glow glow-accent"></div>
        <div class="tech-rings">
            <div class="ring ring-outer"></div>
            <div class="ring ring-middle"></div>
            <div class="ring ring-inner"></div>
            <div class="pulse-dot"></div>
        </div>
        <div class="particles-container" id="particles-js"></div>
    </div>

    <!-- Reset Password Content -->
    <div class="container">
        <div class="signup-section">
            <div class="signup-wrapper" data-aos="fade-up" data-aos-delay="400">
                <div class="signup-form">
                    <div class="form-header">
                        <h3>Set New Password</h3>
                        <p>Enter your new password below. Make sure it's different from your current password.</p>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form", @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "validation-summary" })

                        @Html.HiddenFor(m => m.AccessToken)
                        @Html.HiddenFor(m => m.RefreshToken)

                        <div class="form-field">
                            <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M7 10V7a5 5 0 1 1 10 0v3l-1 7H8l-1-7Z" />
                                <path d="M12 7v4" />
                                <path d="M8 17h8" />
                            </svg>
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-input", placeholder = "New Password", required = "required", minlength = "8" })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                            <div class="focus-indicator"></div>
                            <div class="password-requirements">
                                <small class="text-muted">
                                    Password must be at least 8 characters long and different from your current password.
                                </small>
                            </div>
                        </div>

                        <div class="form-field">
                            <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M7 10V7a5 5 0 1 1 10 0v3l-1 7H8l-1-7Z" />
                                <path d="M12 7v4" />
                                <path d="M8 17h8" />
                            </svg>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-input", placeholder = "Confirm New Password", required = "required" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            <div class="focus-indicator"></div>
                        </div>

                        <button type="submit" class="submit-btn" id="submitBtn">
                            <span class="btn-text">Update Password</span>
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                                <polyline points="12 5 19 12 12 19"></polyline>
                            </svg>
                            <span class="loading-spinner"></span>
                        </button>

                        <div class="form-footer">
                            <p>Remember your password? @Html.ActionLink("Login", "Login", "Account", null, new { @class = "login-link" })</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
     // Store application paths in variables
    var forgotPasswordUrl = '@Url.Action("ForgotPassword", "Account")';
    var loginUrl = '@Url.Action("Login", "Account")';
    // Extract tokens from URL hash
    window.addEventListener('load', function () {
    // Parse hash parameters from the URL
    var hash = window.location.hash.substring(1);
    var params = new URLSearchParams(hash);

    var accessToken = params.get('access_token');
    var refreshToken = params.get('refresh_token');
    var type = params.get('type');

    // Set the hidden fields with the tokens if they exist in the URL
    if (accessToken && type === 'recovery') {
        var accessTokenField = document.querySelector('input[name="AccessToken"]');
        var refreshTokenField = document.querySelector('input[name="RefreshToken"]');

        if (accessTokenField) {
            accessTokenField.value = accessToken;
            console.log("Access token set in hidden field");
        }

        if (refreshTokenField && refreshToken) {
            refreshTokenField.value = refreshToken;
            console.log("Refresh token set in hidden field");
        }

        // Clean up the URL by removing the hash
        if (history.replaceState) {
            history.replaceState(null, null, window.location.pathname);
        }
    }

    // Check for tokens in the hidden fields - if they're missing and we don't have success message,
    // redirect to forgot password
    var accessTokenField = document.querySelector('input[name="AccessToken"]');
    var successAlert = document.querySelector('.alert-success');
    var errorAlert = document.querySelector('.alert-danger');

    if ((!accessTokenField || !accessTokenField.value) && !successAlert && !errorAlert) {
        console.log("No valid recovery token found, redirecting to forgot password");
        window.location.href = forgotPasswordUrl;
        return;
    }

    // Check for success message and redirect after delay
    if (successAlert) {
        // Add countdown display
        var countdown = 3;
        var countdownElement = document.createElement('div');
        countdownElement.className = 'redirect-countdown';
        countdownElement.innerHTML = `<small>Redirecting to login in <span id="countdown">${countdown}</span> seconds...</small>`;
        successAlert.appendChild(countdownElement);

        var countdownInterval = setInterval(function() {
            countdown--;
            document.getElementById('countdown').textContent = countdown;

            if (countdown <= 0) {
                clearInterval(countdownInterval);
                window.location.href = loginUrl;
            }
        }, 1000); // Update every 1 second
    }
});

        // Rest of your existing validation code...
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var form = document.querySelector('.needs-validation');
                var newPasswordField = document.querySelector('input[name="NewPassword"]');
                var confirmPasswordField = document.querySelector('input[name="ConfirmPassword"]');
                var submitBtn = document.getElementById('submitBtn');

                function validatePasswordStrength(password) {
                    if (password.length < 8) {
                        return { valid: false, message: 'Password must be at least 8 characters long.' };
                    }

                    var hasUpper = /[A-Z]/.test(password);
                    var hasLower = /[a-z]/.test(password);
                    var hasNumber = /\d/.test(password);
                    var hasSpecial = /[!@@#$%^&*(),.?':{}|<>]/.test(password);

                    var strength = 0;
                    if (hasUpper) strength++;
                    if (hasLower) strength++;
                    if (hasNumber) strength++;
                    if (hasSpecial) strength++;

                    if (strength < 3) {
                        return { valid: false, message: 'Password should include uppercase, lowercase, numbers, and special characters.' };
                    }

                    return { valid: true, message: '' };
                }

                newPasswordField.addEventListener('input', function () {
                    var validation = validatePasswordStrength(this.value);
                    var errorElement = this.parentNode.querySelector('.text-danger');

                    if (!validation.valid && this.value.length > 0) {
                        errorElement.textContent = validation.message;
                        this.setCustomValidity(validation.message);
                    } else {
                        errorElement.textContent = '';
                        this.setCustomValidity('');
                    }
                });

                confirmPasswordField.addEventListener('input', function () {
                    var errorElement = this.parentNode.querySelector('.text-danger');

                    if (this.value !== newPasswordField.value && this.value.length > 0) {
                        errorElement.textContent = 'Passwords do not match.';
                        this.setCustomValidity('Passwords do not match.');
                    } else {
                        errorElement.textContent = '';
                        this.setCustomValidity('');
                    }
                });

                form.addEventListener('submit', function (event) {
                    var newPassword = newPasswordField.value;
                    var confirmPassword = confirmPasswordField.value;

                    var passwordValidation = validatePasswordStrength(newPassword);
                    if (!passwordValidation.valid) {
                        event.preventDefault();
                        event.stopPropagation();
                        newPasswordField.parentNode.querySelector('.text-danger').textContent = passwordValidation.message;
                        return;
                    }

                    if (newPassword !== confirmPassword) {
                        event.preventDefault();
                        event.stopPropagation();
                        confirmPasswordField.parentNode.querySelector('.text-danger').textContent = 'Passwords do not match.';
                        return;
                    }

                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    } else {
                        submitBtn.disabled = true;
                        submitBtn.querySelector('.btn-text').textContent = 'Updating...';
                        submitBtn.querySelector('.loading-spinner').style.display = 'inline-block';
                    }

                    form.classList.add('was-validated');
                }, false);
            }, false);
        })();
</script>
}

<style>
    .password-requirements {
        margin-top: 5px;
    }

    .loading-spinner {
        display: none;
        width: 16px;
        height: 16px;
        border: 2px solid #f3f3f3;
        border-top: 2px solid #007bff;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-left: 8px;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .submit-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
</style>