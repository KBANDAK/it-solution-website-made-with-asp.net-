@{
    ViewBag.Title = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
  <link rel="stylesheet"  href="~/Content/auth/signup.css" />
}

<div class="signup-page">
    <!-- Background elements -->
    <div class="bg-elements">
        <div class="grid-plane"></div>
        <div class="glow glow-primary"></div>
        <div class="glow glow-accent"></div>
        <div class="tech-rings">
            <div class="ring ring-outer"></div>
            <div class="ring ring-middle"></div>
            <div class="ring ring-inner"></div>
            <div class="pulse-dot"></div>
        </div>
        <div class="particles-container" id="particles-js"></div>
    </div>

    <!-- Confirmation Content -->
    <div class="container">
        <div class="signup-section">
            <div class="signup-wrapper" data-aos="fade-up" data-aos-delay="400">
                <div class="signup-form">
                    <div class="form-header">
                        <h3>Check Your Email</h3>
                        <p>We've sent a password reset link to your email address.</p>
                    </div>
                    <div class="form-footer">
                        <p>Return to @Html.ActionLink("Login", "Login", "Account", null, new { @class = "login-link" })</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>