<script>
    // Auto-dismiss alerts after 5 seconds or on close button click
    document.addEventListener('DOMContentLoaded', function () {
        const successAlert = document.getElementById('successAlert');
        const errorAlert = document.getElementById('errorAlert');

        function dismissAlert(alert) {
            if (alert) {
                alert.style.opacity = '0';
                alert.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    alert.style.display = 'none';
                }, 500);
            }
        }

        if (successAlert) {
            setTimeout(() => dismissAlert(successAlert), 5000);
            const closeBtn = successAlert.querySelector('.alert-close');
            if (closeBtn) {
                closeBtn.addEventListener('click', () => dismissAlert(successAlert));
            }
        }

        if (errorAlert) {
            setTimeout(() => dismissAlert(errorAlert), 5000);
            const closeBtn = errorAlert.querySelector('.alert-close');
            if (closeBtn) {
                closeBtn.addEventListener('click', () => dismissAlert(errorAlert));
            }
        }
    });
</script>