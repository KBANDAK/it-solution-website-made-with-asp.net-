<style>
    /* Global Styles */
    body {
        background-color: #0d1117;
        color: #ffffff;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 1200px;
        width: 100%;
        padding: 0 32px;
        margin: 0 auto;
        z-index: 2;
        position: relative;
    }

    /* Hero Section */
    .hero-section {
        position: relative;
        min-height: 500px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        margin: 0;
        padding: 0;
        background-color: #0d1117;
    }

    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
    }

    .grid-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: linear-gradient(rgba(0, 255, 247, 0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 247, 0.05) 1px, transparent 1px);
        background-size: 40px 40px;
        z-index: 0;
        opacity: 0;
        animation: fadeInGrid 2s ease forwards 0.5s;
    }

    .particles-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    /* Tech elements */
    .tech-element {
        position: absolute;
        opacity: 0;
        z-index: 1;
        animation: fadeIn 1.5s ease forwards 0.5s;
    }

    .tech-hexagon {
        width: 300px;
        height: 260px;
        background: linear-gradient(145deg, rgba(0, 255, 247, 0.05), transparent);
        clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
        top: 10%;
        right: 10%;
        animation: pulseHex 15s ease-in-out infinite;
    }

    .tech-circuit {
        width: 200px;
        height: 300px;
        background-image: linear-gradient(rgba(0, 255, 247, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 255, 247, 0.1) 1px, transparent 1px);
        background-size: 20px 20px;
        bottom: 10%;
        left: 5%;
        transform: perspective(500px) rotateY(30deg);
        opacity: 0;
        animation: fadeIn 2s ease forwards 1s, floatElement 8s ease-in-out infinite;
    }

    .tech-pulse {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(0, 255, 247, 0.1) 0%, transparent 70%);
        top: 60%;
        right: 20%;
        opacity: 0;
        animation: pulse 4s infinite;
    }

    .hero-content {
        text-align: center;
        padding: 0 20px;
        max-width: 800px;
        margin: 0 auto;
        z-index: 10;
    }

    .hero-title {
        font-family: "Share Tech Mono", monospace;
        font-size: 48px;
        font-weight: 700;
        color: #00FFF7;
        margin-bottom: 20px;
        text-shadow: 0 0 15px rgba(0, 255, 247, 0.5);
    }

    .hero-subtitle {
        font-size: 20px;
        color: #FFFFFF;
        margin-bottom: 40px;
    }

    .tech-badge {
        display: inline-block;
        padding: 6px 15px;
        border: 1px solid rgba(0, 255, 247, 0.3);
        background-color: rgba(0, 255, 247, 0.05);
        border-radius: 20px;
        position: relative;
        overflow: hidden;
    }

    .badge-text {
        font-family: "Share Tech Mono", monospace;
        color: #00FFF7;
        font-size: 14px;
        font-weight: 600;
        letter-spacing: 1px;
        position: relative;
        z-index: 1;
    }

    .badge-glow {
        position: absolute;
        width: 10px;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(0, 255, 247, 0.5), transparent);
        top: 0;
        left: -20px;
        transform: skewX(-20deg);
        animation: badgeGlow 4s infinite;
    }

    /* Mission Section */
    .mission-section {
        position: relative;
        padding: 100px 0;
        background-color: #0d1117;
        overflow: hidden;
    }

    .section-header {
        position: relative;
        text-align: center;
        margin-bottom: 60px;
        z-index: 2;
    }

    .section-title {
        font-family: "Share Tech Mono", monospace;
        font-size: 36px;
        font-weight: 700;
        color: #00FFF7;
        margin-bottom: 15px;
        text-transform: uppercase;
        letter-spacing: 2px;
        position: relative;
    }

    .title-underline {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin: 0 auto;
        width: 200px;
    }

    .line-segment {
        height: 2px;
        background: linear-gradient(90deg, rgba(0, 255, 247, 0), rgba(0, 255, 247, 0.7));
        flex-grow: 1;
    }

        .line-segment:last-child {
            background: linear-gradient(90deg, rgba(0, 255, 247, 0.7), rgba(0, 255, 247, 0));
        }

    .line-dot {
        width: 8px;
        height: 8px;
        background-color: #00FFF7;
        border-radius: 50%;
        position: relative;
    }

        .line-dot:after {
            content: '';
            position: absolute;
            width: 16px;
            height: 16px;
            border: 1px solid rgba(0, 255, 247, 0.3);
            border-radius: 50%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            animation: pulse 2s infinite;
        }

    .mission-content {
        display: flex;
        flex-direction: column;
        gap: 50px;
    }

    .mission-card {
        background: linear-gradient(145deg, #141d29, #0d1117);
        border: 1px solid rgba(0, 255, 247, 0.1);
        border-radius: 15px;
        padding: 40px;
        text-align: center;
        position: relative;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
