    }

    .tech-corners .corner {
        position: absolute;
        width: 20px;
        height: 20px;
        border-color: rgba(0, 255, 247, 0.2);
        border-style: solid;
        border-width: 0;
    }

    .corner.top-left {
        top: 15px;
