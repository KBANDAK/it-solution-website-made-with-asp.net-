<script>
    // Enhanced filter functionality with smooth animations
    const statusFilter = document.getElementById('statusFilter');
    const priorityFilter = document.getElementById('priorityFilter');
    const ordersGrid = document.getElementById('ordersGrid');
    const tableHeader = document.getElementById('tableHeader');
    const viewButtons = document.querySelectorAll('.view-btn');

    // View switching functionality - Updated for horizontal default
    viewButtons.forEach(btn => {
        btn.addEventListener('click', () => {
            const view = btn.dataset.view;

            // Update active button
            viewButtons.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            // Apply view styles
            switchView(view);
        });
    });

    /* JavaScript function to update */
    function switchView(view) {
    const cards = ordersGrid.querySelectorAll('.order-card');

    // Reset classes
    ordersGrid.className = 'orders-grid';

    if (view === 'horizontal') {
        // Grid view (side by side)
        ordersGrid.classList.add('horizontal');
        tableHeader.style.display = 'none';

        cards.forEach(card => {
            card.classList.remove('vertical');
            card.querySelector('.card-content').style.display = 'block';
            card.querySelector('.table-row').style.display = 'none';
        });
    } else if (view === 'table') {
        ordersGrid.classList.add('table');
        tableHeader.style.display = 'grid';

        cards.forEach(card => {
            card.classList.remove('vertical');
            card.querySelector('.card-content').style.display = 'none';
            card.querySelector('.table-row').style.display = 'grid';
        });
    } else {
        // Vertical view (default - single column under header/filters)
        tableHeader.style.display = 'none';

        cards.forEach(card => {
            card.classList.add('vertical');
            card.querySelector('.card-content').style.display = 'block';
            card.querySelector('.table-row').style.display = 'none';

            // Add vertical classes for better spacing
            const elements = card.querySelectorAll('.order-header, .order-title, .order-details, .detail-group, .detail-value, .progress-bar, .order-description, .description-text, .order-actions, .btn-tech');
            elements.forEach(el => el.classList.add('vertical'));
        });
    }
}

    function filterOrders() {
        const statusValue = statusFilter.value.trim().toLowerCase();
        const priorityValue = priorityFilter.value.trim().toLowerCase();

        const orderCards = ordersGrid.querySelectorAll('.order-card');

        orderCards.forEach((card, index) => {
            // Get the data attributes and ensure they're properly cleaned
            let cardStatus = card.dataset.status?.trim().toLowerCase() || '';
            let cardPriority = card.dataset.priority?.trim().toLowerCase() || '';

            // Clean up any potential artifacts from Razor syntax
            cardStatus = cardStatus.replace(/\?\.\w+\(\)/g, ''); // Remove ?.tolower() artifacts
            cardPriority = cardPriority.replace(/\?\.\w+\(\)/g, '');

            const statusMatch = !statusValue || cardStatus === statusValue;
            const priorityMatch = !priorityValue || cardPriority === priorityValue;

            console.log(`ServiceOrders:${index + 1} cardStatus: [${cardStatus}], statusValue: [${statusValue}], StatusMatch: ${statusMatch}`);

            if (statusMatch && priorityMatch) {
                card.style.display = 'block';
                card.style.animation = `fadeIn 0.5s ease ${index * 0.05}s forwards`;
            } else {
                card.style.animation = 'none';
                card.style.display = 'none';
            }
        });
    }



    statusFilter.addEventListener('change', filterOrders);
    priorityFilter.addEventListener('change', filterOrders);

    function viewOrderDetails(btn) {
    // Get the raw JSON string
    let jsonString = btn.getAttribute('data-details');

    try {
        // First try parsing without any modifications
        const order = JSON.parse(jsonString);
        showOrderDetails(order);
        return;
    } catch (e) {
        console.log('First parse failed, trying Unicode decode...');
    }

    try {
        // Decode Unicode escape sequences (\u0022 -> ")
        jsonString = jsonString.replace(/\\u([0-9a-fA-F]{4})/g, function (match, grp) {
            return String.fromCharCode(parseInt(grp, 16));
        });

        // Try parsing the decoded string
        const order = JSON.parse(jsonString);
        showOrderDetails(order);
        return;
    } catch (e) {
        console.log('Unicode decode failed, trying manual fixes...');
    }

    try {
        // Fix the specific issue with escaped ampersands and other unnecessary escapes
        jsonString = jsonString
            .replace(/\\&/g, '&')          // Fix escaped ampersands
            .replace(/\\'/g, "'")          // Fix escaped single quotes
            .replace(/\\#/g, '#')          // Fix escaped hash symbols
            .replace(/\\%/g, '%')          // Fix escaped percent symbols
            .replace(/\\@@/g, '@@')          // Fix escaped at symbols
            .replace(/\\\$/g, '$')         // Fix escaped dollar symbols
            .replace(/\\!/g, '!')          // Fix escaped exclamation marks
            .replace(/\\\?/g, '?')         // Fix escaped question marks
            .replace(/\\=/g, '=')          // Fix escaped equals signs
            .replace(/\\+/g, '+')          // Fix escaped plus signs
            .replace(/\\-/g, '-')          // Fix escaped minus signs
            .replace(/\\\*/g, '*')         // Fix escaped asterisks
            .replace(/\\\^/g, '^')         // Fix escaped carets
            .replace(/\\~/g, '~')          // Fix escaped tildes
            .replace(/\\`/g, '`')          // Fix escaped backticks
            .replace(/\\\|/g, '|')         // Fix escaped pipes
            .replace(/\\</g, '<')          // Fix escaped less than
            .replace(/\\>/g, '>')          // Fix escaped greater than
            .replace(/\\;/g, ';')          // Fix escaped semicolons
            .replace(/\\:/g, ':')          // Fix escaped colons
            .replace(/\\\(/g, '(')         // Fix escaped opening parentheses
            .replace(/\\\)/g, ')')         // Fix escaped closing parentheses
            .replace(/\\\[/g, '[')         // Fix escaped opening brackets
            .replace(/\\\]/g, ']')         // Fix escaped closing brackets
            .replace(/\\\{/g, '{')         // Fix escaped opening braces
            .replace(/\\\}/g, '}');        // Fix escaped closing braces

        const order = JSON.parse(jsonString);
        showOrderDetails(order);
        return;
    } catch (e) {
        console.log('Symbol fixes failed, trying standard escape fixes...');
    }

    try {
        // Try fixing common escape issues (but keep necessary escapes)
        jsonString = jsonString
            .replace(/\\"/g, '"')          // Fix escaped quotes
            .replace(/\\\\/g, '\\')        // Fix double backslashes
            .replace(/\\n/g, '\n')         // Fix newlines
            .replace(/\\r/g, '\r')         // Fix carriage returns
            .replace(/\\t/g, '\t');        // Fix tabs

        const order = JSON.parse(jsonString);
        showOrderDetails(order);
        return;
    } catch (e) {
        console.log('Standard escape fixes failed, trying request_details specific fix...');
    }

    try {
        // Fix the specific issue with request_details containing unescaped JSON
        // Find the request_details field and properly escape its JSON content
        jsonString = jsonString.replace(
            /"request_details":"({[^}]*(?:{[^}]*}[^}]*)*})"/g,
            function(match, innerJson) {
                // Escape quotes in the inner JSON
                const escapedInnerJson = innerJson.replace(/"/g, '\\"');
                return `"request_details":"${escapedInnerJson}"`;
            }
        );

        const order = JSON.parse(jsonString);
        showOrderDetails(order);
        return;
    } catch (e) {
        console.log('Request details fix failed, trying comprehensive fix...');
    }

    try {
        // More comprehensive fix for nested JSON in request_details
        // Look for the pattern: "request_details":"{ ... }"
        const requestDetailsMatch = jsonString.match(/"request_details":"(\{.*?\})"/);
        if (requestDetailsMatch) {
            const originalInnerJson = requestDetailsMatch[1];
            // Escape all quotes in the inner JSON
            const escapedInnerJson = originalInnerJson.replace(/"/g, '\\"');
            // Replace the original with the escaped version
            jsonString = jsonString.replace(
                `"request_details":"${originalInnerJson}"`,
                `"request_details":"${escapedInnerJson}"`
            );
        }

        const order = JSON.parse(jsonString);
        showOrderDetails(order);
        return;
    } catch (e) {
        console.error('All JSON parsing attempts failed:', e);
        console.log('Raw JSON string:', jsonString);

        // Show error in modal
        const modal = document.getElementById('orderDetailsModal');
        const content = document.getElementById('orderDetailsContent');
        content.innerHTML = `
            <div style="text-align: center; padding: 2rem; color: var(--error-color);">
                <i class="fas fa-exclamation-triangle" style="font-size: 1.5rem; margin-bottom: 1rem;"></i>
                <br>Failed to load order details. Invalid JSON format.
                <br><br>
                <button class="btn-tech btn-secondary" onclick="closeOrderModal()">Close</button>
            </div>
        `;
        modal.style.display = 'flex';
        modal.classList.add('active');
        modal.setAttribute('aria-hidden', 'false');
    }
}

function showOrderDetails(order) {
    const modal = document.getElementById('orderDetailsModal');
    const content = document.getElementById('orderDetailsContent');

    // Show loading state
    content.innerHTML = '<div style="text-align: center; padding: 2rem; color: var(--text-secondary);"><i class="fas fa-spinner fa-spin" style="font-size: 1.5rem; margin-bottom: 1rem;"></i><br>Loading order details...</div>';
    modal.style.display = 'flex';
    modal.classList.add('active');
    modal.setAttribute('aria-hidden', 'false');

    // Pass the order to displayOrderDetails
    setTimeout(() => {
        displayOrderDetails(order);
    }, 200);
}


    function displayOrderDetails(order) {
