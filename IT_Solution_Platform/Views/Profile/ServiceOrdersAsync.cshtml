        // Step 1: Decode HTML entities
        const textarea = document.createElement('textarea');
        textarea.innerHTML = jsonString;
        jsonString = textarea.value;

        // Step 2: Decode Unicode escapes
        jsonString = jsonString.replace(/\\u([0-9a-fA-F]{4})/g, function (match, grp) {
            return String.fromCharCode(parseInt(grp, 16));
        });

        // Step 3: Fix escaped ampersands and other problematic escapes
        jsonString = jsonString
            .replace(/\\&/g, '&')          // Fix escaped ampersands - THIS IS THE KEY FIX
            .replace(/\\'/g, "'")          // Fix escaped single quotes
            .replace(/\\#/g, '#')          // Fix escaped hash symbols
            .replace(/\\%/g, '%')          // Fix escaped percent symbols
            .replace(/\\@@/g, '@@')          // Fix escaped at symbols
