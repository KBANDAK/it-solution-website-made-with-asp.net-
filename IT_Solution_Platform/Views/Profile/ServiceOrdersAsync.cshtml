@model List<IT_Solution_Platform.Models.ServiceRequestDetailViewModel>
@using IT_Solution_Platform.Helpers
@{
    ViewBag.Title = "Service Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Enhanced Container with proper spacing */
    .service-orders-container {
        background: var(--dark-bg);
        min-height: 100vh;
        padding: 2rem 1rem;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .container-services-orders {
        max-width: 1400px;
        margin: 0 auto;
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 2rem; /* This ensures consistent spacing between all sections */
    }


    /* Fixed Header with proper spacing and layout */
    .orders-header {
        background: var(--glass-bg);
        backdrop-filter: var(--glass-blur);
        border: 1px solid var(--border-light);
        border-radius: 20px;
        padding: 2rem 2.5rem;
        margin-bottom: 0; /* Remove this - let container gap handle it */
        box-shadow: var(--box-shadow);
        position: relative;
        overflow: hidden;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 2rem;
        min-height: auto;
        flex-shrink: 0; /* Prevent header from shrinking */
    }

        .orders-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), var(--primary-light), var(--accent-color));
            animation: shimmer 3s ease-in-out infinite;
        }

    @@keyframes shimmer {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.8;
        }
    }

    .header-content {
        flex: 1;
        min-width: 300px;
        max-width: 600px;
    }

    .header-title {
        color: var(--text-bright);
        font-size: 2.5rem;
        font-weight: 900;
        margin: 0 0 0.5rem 0;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        line-height: 1.2;
    }

    .header-subtitle {
        color: var(--text-secondary);
        font-size: 1.1rem;
        font-weight: 400;
        margin: 0;
        opacity: 0.9;
        line-height: 1.4;
    }

    .header-actions {
        display: flex;
        gap: 1rem;
        align-items: center;
        flex-wrap: wrap;
        flex-shrink: 0;
    }

    /* Enhanced Filter Controls - positioned directly under header */
    .filter-controls {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 0; /* Remove this - let container gap handle it */
        flex-wrap: wrap;
        align-items: center;
        background: var(--glass-bg);
        backdrop-filter: var(--glass-blur);
        padding: 1.25rem 1.75rem;
        border-radius: 16px;
        border: 1px solid var(--border-light);
        width: 100%; /* Ensure full width */
        box-sizing: border-box;
        flex-shrink: 0; /* Prevent filters from shrinking */
    }

    .filter-select {
        background: var(--input-bg);
        border: 1px solid var(--border-light);
        border-radius: 10px;
        padding: 0.75rem 2.5rem 0.75rem 1.25rem;
        color: var(--text-primary);
        font-size: 0.95rem;
        font-weight: 500;
        transition: var(--transition);
        appearance: none;
        background-image: url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D%2212%22%20height%3D%228%22%20viewBox%3D%220%200%2012%208%22%20fill%3D%22none%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M1%201L6%206L11%201%22%20stroke%3D%22%2300e5ff%22%20stroke-width%3D%222%22%2F%3E%3C%2Fsvg%3E');
        background-repeat: no-repeat;
        background-position: right 1rem center;
        background-size: 12px;
        min-width: 160px;
        cursor: pointer;
    }

        .filter-select:focus {
            border-color: var(--border-focus);
            box-shadow: 0 0 15px var(--primary-glow);
            outline: none;
            transform: scale(1.02);
        }

        .filter-select:hover {
            border-color: var(--border-hover);
            background-color: var(--card-hover);
        }

    /* View Toggle Buttons - updated for horizontal default */
    .view-toggle {
        display: flex;
        background: var(--input-bg);
        border: 1px solid var(--border-light);
        border-radius: 12px;
        overflow: hidden;
    }

    .view-btn {
        padding: 0.75rem 1.25rem;
        background: transparent;
        border: none;
        color: var(--text-secondary);
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        font-weight: 500;
        white-space: nowrap;
    }

        .view-btn.active {
            background: var(--primary-color);
            color: var(--dark-bg);
            font-weight: 700;
        }

        .view-btn:hover:not(.active) {
            background: var(--card-hover);
            color: var(--text-primary);
        }

    /* Orders Grid - Default to Horizontal View */
    .orders-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        width: 100%;
        flex: 1; /* Take remaining space */
    }

        /* Orders Grid - Grid View (side by side cards) */
        .orders-grid.horizontal {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 1.5rem;
        }

        /* Orders Grid - Vertical View (enhanced single column) */
        .orders-grid.vertical {
            display: grid;
            grid-template-columns: 1fr;
            gap: 2rem;
        }


        /* Orders Grid - Table View */
        .orders-grid.table {
            display: block;
        }

    .table-header {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr 1fr 1fr;
        gap: 1rem;
        padding: 1rem 1.5rem;
        background: var(--card-bg);
        border: 1px solid var(--border-light);
        border-radius: 12px 12px 0 0;
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0;
        width: 100%;
        box-sizing: border-box;
    }

    .table-row {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr 1fr 1fr;
        gap: 1rem;
        padding: 1.5rem 1.5rem;
        background: var(--card-bg);
        border: 1px solid var(--border-light);
        border-top: none;
        transition: var(--transition);
        align-items: center;
    }

        .table-row:hover {
            background: var(--card-hover);
            border-color: var(--border-hover);
        }

        .table-row:last-child {
            border-radius: 0 0 12px 12px;
        }

    /* Enhanced Order Card - Default optimized for horizontal layout */
    .order-card {
        background: linear-gradient(145deg, var(--card-bg), rgba(13, 18, 29, 0.8));
        border: 1px solid var(--border-light);
        border-radius: 20px;
        padding: 1.5rem; /* Reduced from 2rem for horizontal */
        transition: var(--transition);
        position: relative;
        overflow: hidden;
    }

        .order-card.vertical {
            padding: 2rem;
        }

        .order-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(180deg, var(--primary-color), var(--primary-light));
            opacity: 0;
            transition: var(--transition);
        }

        .order-card::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, var(--primary-glow) 0%, transparent 70%);
            opacity: 0;
            transition: var(--transition);
            pointer-events: none;
        }

        .order-card:hover {
            background: linear-gradient(145deg, var(--card-hover), rgba(17, 22, 37, 0.9));
            border-color: var(--border-hover);
            transform: translateY(-6px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5), 0 0 30px var(--primary-glow);
        }

            .order-card:hover::before {
                opacity: 1;
            }

            .order-card:hover::after {
                opacity: 0.03;
            }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem; /* Reduced for horizontal */
        flex-wrap: wrap;
        gap: 1rem;
    }

        .order-header.vertical {
            margin-bottom: 1.5rem;
        }

    .order-title {
        color: var(--text-bright);
        font-size: 1.2rem; /* Reduced for horizontal */
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        line-height: 1.3;
    }

        .order-title.vertical {
            font-size: 1.4rem;
        }

    .order-id {
        color: var(--text-muted);
        font-size: 0.9rem;
        margin: 0.25rem 0 0 0;
        font-weight: 500;
    }

    /* Enhanced Status Badges */
    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.8px;
        border: 1px solid transparent;
        transition: var(--transition);
        position: relative;
        overflow: hidden;
    }

        .status-badge::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .status-badge:hover::before {
            left: 100%;
        }

    .status-submitted {
        background: rgba(0, 229, 255, 0.2);
        color: var(--primary-color);
        border-color: rgba(0, 229, 255, 0.5);
        box-shadow: 0 0 10px rgba(0, 229, 255, 0.3);
    }

    .status-pending {
        background: rgba(255, 170, 0, 0.2);
        color: var(--warning-color);
        border-color: rgba(255, 170, 0, 0.5);
        box-shadow: 0 0 10px rgba(255, 170, 0, 0.3);
    }

    .status-inprogress {
        background: rgba(0, 187, 255, 0.2);
        color: var(--primary-dim);
        border-color: rgba(0, 187, 255, 0.5);
        box-shadow: 0 0 10px rgba(0, 187, 255, 0.3);
    }

    .status-completed {
        background: rgba(0, 255, 136, 0.2);
        color: var(--success-color);
        border-color: rgba(0, 255, 136, 0.5);
        box-shadow: 0 0 10px rgba(0, 255, 136, 0.3);
    }

    .status-rejected {
        background: rgba(255, 68, 68, 0.2);
        color: var(--error-color);
        border-color: rgba(255, 68, 68, 0.5);
        box-shadow: 0 0 10px rgba(255, 68, 68, 0.3);
    }

    /* Enhanced Order Details Grid - optimized for horizontal */
    .order-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

        .order-details.vertical {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

    .detail-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 0.75rem; /* Reduced for horizontal */
        background: var(--input-bg);
        border-radius: 10px;
        border: 1px solid var(--border-light);
        transition: var(--transition);
    }

        .detail-group.vertical {
            padding: 1rem;
        }

        .detail-group:hover {
            border-color: var(--border-hover);
            background: var(--card-hover);
            transform: translateY(-2px);
        }

    .detail-label {
        color: var(--text-muted);
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

    .detail-value {
        color: var(--text-primary);
        font-size: 0.9rem; /* Reduced for horizontal */
        font-weight: 600;
    }

        .detail-value.vertical {
            font-size: 1rem;
        }

    /* Enhanced Progress Bar */
    .progress-bar {
        width: 100%;
        height: 6px; /* Reduced for horizontal */
        background: var(--input-bg);
        border-radius: 4px;
        overflow: hidden;
        margin: 1rem 0; /* Reduced for horizontal */
        box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.3);
    }

        .progress-bar.vertical {
            height: 8px;
            margin: 1.5rem 0;
        }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
        border-radius: 4px;
        transition: var(--transition-long);
        position: relative;
        overflow: hidden;
    }

        .progress-fill::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            animation: progress-shimmer 2s infinite;
        }

    @@keyframes progress-shimmer {
        0% {
            transform: translateX(-100%);
        }

        100% {
            transform: translateX(100%);
        }
    }

    /* Enhanced Description */
    .order-description {
        background: var(--input-bg);
        border: 1px solid var(--border-light);
        border-radius: 12px;
        padding: 1rem; /* Reduced for horizontal */
        margin: 1rem 0; /* Reduced for horizontal */
        position: relative;
    }

        .order-description.vertical {
            padding: 1.5rem;
            margin: 1.5rem 0;
        }

        .order-description::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--primary-color);
            border-radius: 2px;
        }

    .description-text {
        color: var(--text-secondary);
        line-height: 1.5; /* Reduced for horizontal */
        margin: 0;
        font-size: 0.9rem; /* Reduced for horizontal */
    }

        .description-text.vertical {
            font-size: 1rem;
            line-height: 1.6;
        }

    /* Enhanced Action Buttons */
    .order-actions {
        display: flex;
        gap: 0.75rem; /* Reduced for horizontal */
        margin-top: 1rem; /* Reduced for horizontal */
        flex-wrap: wrap;
    }

        .order-actions.vertical {
            gap: 1rem;
            margin-top: 1.5rem;
        }

    .btn-tech {
        padding: 0.5rem 1rem; /* Reduced for horizontal */
        border: 1px solid var(--border-light);
        border-radius: 10px;
        background: var(--input-bg);
        color: var(--text-primary);
        text-decoration: none;
        font-size: 0.8rem; /* Reduced for horizontal */
        font-weight: 600;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

        .btn-tech.vertical {
            padding: 0.75rem 1.5rem;
            font-size: 0.9rem;
        }

        .btn-tech::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(0, 229, 255, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .btn-tech:hover::before {
            left: 100%;
        }

        .btn-tech:hover {
            background: var(--card-hover);
            border-color: var(--border-hover);
            color: var(--primary-color);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3), 0 0 15px var(--primary-glow);
        }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dim));
        border-color: var(--primary-color);
        color: var(--dark-bg);
        font-weight: 700;
        box-shadow: 0 0 15px var(--primary-glow);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary-light), var(--primary-color));
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4), 0 0 25px var(--primary-glow);
            color: var(--dark-bg);
            transform: translateY(-3px) scale(1.02);
        }

    /* Enhanced Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 3rem;
        background: linear-gradient(145deg, var(--card-bg), rgba(13, 18, 29, 0.8));
        border: 1px solid var(--border-light);
        border-radius: 20px;
        animation: fadeIn 0.8s ease;
        position: relative;
        overflow: hidden;
        width: 100%;
        box-sizing: border-box;
    }

        .empty-state::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color));
            animation: gradient-shift 3s ease-in-out infinite;
        }

    @@keyframes gradient-shift {
        0%, 100% {
            transform: translateX(-100%);
        }

        50% {
            transform: translateX(100%);
        }
    }

    .empty-icon {
        font-size: 4rem;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        opacity: 0.8;
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-8px);
        }
    }

    .empty-title {
        color: var(--text-bright);
        font-size: 1.8rem;
        font-weight: 800;
        margin: 0 0 1rem 0;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .empty-subtitle {
        color: var(--text-secondary);
        font-size: 1.1rem;
        margin: 0 0 2rem 0;
        line-height: 1.6;
    }

    /* Enhanced Priority Indicators */
    .priority-high {
        color: var(--error-color);
        text-shadow: 0 0 8px var(--error-glow);
    }

    .priority-medium {
        color: var(--warning-color);
        text-shadow: 0 0 8px rgba(255, 170, 0, 0.3);
    }

    .priority-low {
        color: var(--success-color);
        text-shadow: 0 0 8px var(--success-glow);
    }

    .priority-critical {
        color: var(--error-color);
        animation: critical-pulse 1.5s infinite;
        text-shadow: 0 0 12px var(--error-glow);
    }

    @@keyframes critical-pulse {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.7;
            transform: scale(1.05);
        }
    }

    .tech-icon {
        width: 1.2rem;
        height: 1.2rem;
        opacity: 0.9;
        filter: drop-shadow(0 0 3px currentColor);
    }

    /* Enhanced Modal */
    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(10px);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        opacity: 0;
        visibility: hidden;
        transition: all 0.4s ease;
    }

        .modal.active {
            opacity: 1;
            visibility: visible;
        }

    .modal-content {
        background: linear-gradient(145deg, var(--card-bg), rgba(13, 18, 29, 0.95));
        border: 1px solid var(--border-light);
        border-radius: 20px;
        max-width: 600px;
        width: 90%;
        max-height: 85vh;
        overflow-y: auto;
        transform: scale(0.8) translateY(50px);
        transition: transform 0.4s ease;
        box-shadow: 0 25px 60px rgba(0, 0, 0, 0.6), 0 0 40px var(--primary-glow);
    }

    .modal.active .modal-content {
        transform: scale(1) translateY(0);
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 2rem;
        border-bottom: 1px solid var(--border-light);
        background: var(--glass-bg);
        backdrop-filter: var(--glass-blur);
    }

        .modal-header h3 {
            color: var(--text-bright);
            font-size: 1.6rem;
            margin: 0;
            font-weight: 700;
        }

    .modal-close {
        background: none;
        border: none;
        color: var(--text-muted);
        font-size: 1.8rem;
        cursor: pointer;
        padding: 0.5rem;
        transition: var(--transition);
        border-radius: 6px;
    }

        .modal-close:hover {
            color: var(--primary-color);
            background: var(--input-bg);
            transform: scale(1.1);
        }

    .modal-body {
        padding: 2rem;
    }

    .detail-section {
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--border-light);
    }

        .detail-section:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

        .detail-section h4 {
            color: var(--primary-color);
            font-size: 1.3rem;
            margin: 0 0 1rem 0;
            font-weight: 700;
        }

        .detail-section p {
            color: var(--text-secondary);
            font-size: 1rem;
            margin: 0.75rem 0;
            line-height: 1.6;
        }

    /* Enhanced Responsive Design */
    @@media (max-width: 768px) {

        .container-services-orders {
            gap: 1.5rem; /* Reduce gap on mobile */
        }

        .service-orders-container {
            padding: 1rem 0.5rem;
        }

        .orders-header {
            padding: 1.5rem;
            flex-direction: column;
            align-items: flex-start;
        }

        .header-content {
            width: 100%;
            max-width: none;
        }

        .header-title {
            font-size: 2rem;
        }

        .header-subtitle {
            font-size: 1rem;
        }

        .header-actions {
            width: 100%;
            justify-content: flex-start;
        }

        .orders-grid {
            grid-template-columns: 1fr;
        }

        .table-header,
        .table-row {
            grid-template-columns: 1fr;
            gap: 0.5rem;
        }

        .order-details {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .order-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .order-actions {
            flex-direction: column;
            gap: 0.75rem;
        }

        .btn-tech {
            width: 100%;
            justify-content: center;
        }

        .filter-controls {
            flex-direction: column;
            gap: 1rem;
            padding: 1.25rem;
        }

        .filter-select {
            width: 100%;
            min-width: auto;
        }

        .modal-content {
            width: 95%;
            margin: 1rem;
        }

        .modal-header {
            padding: 1.25rem;
        }

        .modal-body {
            padding: 1.5rem;
        }
    }

    @@media (max-width: 480px) {
        .container-services-orders {
            gap: 1rem; /* Further reduce gap on small mobile */
        }

        .header-title {
            font-size: 1.6rem;
        }

        .order-card {
            padding: 1.5rem;
        }

        .order-title {
            font-size: 1.2rem;
        }

        .btn-tech {
            padding: 0.6rem 1.25rem;
            font-size: 0.85rem;
        }

        .empty-state {
            padding: 3rem 1.5rem;
        }

        .empty-icon {
            font-size: 3rem;
        }

        .empty-title {
            font-size: 1.5rem;
        }

        .empty-subtitle {
            font-size: 1rem;
        }
    }

    /* Animation for fade in */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Loading animation for cards */
    .order-card {
        animation: fadeIn 0.5s ease forwards;
    }

        .order-card:nth-child(1) {
            animation-delay: 0.05s;
        }

        .order-card:nth-child(2) {
            animation-delay: 0.1s;
        }

        .order-card:nth-child(3) {
            animation-delay: 0.15s;
        }

        .order-card:nth-child(4) {
            animation-delay: 0.2s;
        }

        .order-card:nth-child(5) {
            animation-delay: 0.25s;
        }
</style>


@{

    int orderNumber = 0;
}

<div class="service-orders-container">
    <div class="container-services-orders">
        <!-- Fixed Header Section -->
        <div class="orders-header" role="banner">
            <div class="header-content">
                <h1 class="header-title">
                    <i class="fas fa-server tech-icon" aria-hidden="true"></i>
                    Service Orders
                </h1>
                <p class="header-subtitle">
                    Manage and track your IT service requests • @ViewBag.UserName
                </p>
            </div>
            <div class="header-actions">
                <!-- View Toggle -->
                <div class="view-toggle">
                    <button class="view-btn" data-view="vertical">
                        <i class="fas fa-list"></i>
                        Vertical
                    </button>
                    <button class="view-btn active" data-view="horizontal">
                        <i class="fas fa-th"></i>
                        Grid
                    </button>
                    <button class="view-btn" data-view="table">
                        <i class="fas fa-table"></i>
                        Table
                    </button>
                </div>
            </div>
        </div>

        <!-- Enhanced Filter Controls - Now directly under header -->
        <div class="filter-controls" role="search">
            <select class="filter-select" id="statusFilter" aria-label="Filter by Status">
                <option value="">🔍 All Statuses</option>
                <option value="submitted">📤 Submitted</option>
                <option value="pending">⏳ Pending</option>
                <option value="inprogress">🔄 In Progress</option>
                <option value="completed">✅ Completed</option>
                <option value="rejected">❌ Rejected</option>
            </select>

            <select class="filter-select" id="priorityFilter" aria-label="Filter by Priority">
                <option value="">🎯 All Priorities</option>
                <option value="1">🟢 Low</option>
                <option value="2">🟡 Medium</option>
                <option value="3">🟠 High</option>
                <option value="4">🔴 Critical</option>
            </select>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Table Header (hidden by default) -->
            <div class="table-header" id="tableHeader" style="display: none;">
                <div>Service & Details</div>
                <div>Status</div>
                <div>Priority</div>
                <div>Amount</div>
                <div>Date</div>
                <div>Actions</div>
            </div>

            <!-- Enhanced Orders Grid - Default to horizontal layout -->
            <div class="orders-grid" id="ordersGrid" role="region" aria-label="Service Orders List">
                @foreach (var order in Model.OrderByDescending(x => x.requested_date))
                {
                    orderNumber++;
                    <div class="order-card" data-status="@(order.status_name?.ToLower() ?? "")" data-priority="@(order.priority ?? 0)" role="article">
                        <!-- Table Row View -->
                        <div class="table-row" style="display: none;">
                            <div>
                                <strong>@(order.service_name ?? "Service Request")</strong>
                                <br><small>Order #@orderNumber (ID: @order.request_id)</small>
                            </div>
                            <div>
                                <span class="status-badge status-@(order.status_name?.ToLower())">@order.status_name</span>
                            </div>
                            <div class="priority-@order.PriorityText?.ToLower()">@order.PriorityText</div>
                            <div>@(order.total_amount.HasValue ? order.FormattedTotalAmount : "N/A")</div>
                            <div>@order.FormattedRequestedDate</div>
                            <div>
                                <button class="btn-tech btn-primary" onclick="viewOrderDetails(@order.request_id)" style="padding: 0.4rem 0.8rem; font-size: 0.75rem;">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Card View - Default optimized for horizontal -->
                        <div class="card-content">
                            <div class="order-header">
                                <div>
                                    <h3 class="order-title">
                                        <i class="fas fa-cog tech-icon" aria-hidden="true"></i>
                                        @(order.service_name ?? "Service Request")
                                    </h3>
                                    <p class="order-id">Order #@orderNumber (ID: @order.request_id)</p>
                                </div>
                                <span class="status-badge status-@(order.status_name)" style="background-color: @order.status_color_code">
                                    @order.status_name
                                </span>
                            </div>

                            <!-- Enhanced Progress Bar -->
                            <div class="progress-bar" role="progressbar" aria-valuenow="@order.ProgressPercentage" aria-valuemin="0" aria-valuemax="100">
                                <div class="progress-fill" style="width: @order.ProgressPercentage%"></div>
                            </div>

                            <div class="order-details">
                                <div class="detail-group">
                                    <span class="detail-label">📅 Requested Date</span>
                                    <span class="detail-value">@order.FormattedRequestedDate</span>
                                </div>

                                <div class="detail-group">
                                    <span class="detail-label">⚡ Priority</span>
                                    <span class="detail-value priority-@order.PriorityText?.ToLower()">
                                        <i class="fas fa-exclamation-circle tech-icon" aria-hidden="true"></i>
                                        @order.PriorityText
                                    </span>
                                </div>

                                @if (order.total_amount.HasValue)
                                {
                                    <div class="detail-group">
                                        <span class="detail-label">💰 Amount</span>
                                        <span class="detail-value">@order.FormattedTotalAmount</span>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(order.category_name))
                                {
                                    <div class="detail-group">
                                        <span class="detail-label">📂 Category</span>
                                        <span class="detail-value">@order.category_name</span>
                                    </div>
                                }

                                @if (order.completion_date.HasValue)
                                {
                                    <div class="detail-group">
                                        <span class="detail-label">✅ Completed</span>
                                        <span class="detail-value">@order.FormattedCompletionDate</span>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(order.ApproverFullName) && order.ApproverFullName != "System")
                                {
                                    <div class="detail-group">
                                        <span class="detail-label">👤 Approved By</span>
                                        <span class="detail-value">@order.ApproverFullName</span>
                                    </div>
                                }
                            </div>

                            @{
                                var requestDetails = order.request_details;
                                if (!string.IsNullOrEmpty(requestDetails))
                                {
                                    try
                                    {
                                        var details = System.Text.Json.JsonSerializer.Deserialize<Dictionary<string, object>>(requestDetails);

                                        // Handle Pentesting Service
                                        if (details.ContainsKey("TargetSystem") && details.ContainsKey("TestingObjectives"))
                                        {
                                            <div class="detail-group">
                                                <span class="detail-label">🎯 Target System</span>
                                                <span class="detail-value">@details["TargetSystem"].ToString()</span>
                                            </div>
                                            <div class="detail-group">
                                                <span class="detail-label">🔍 Testing Type</span>
                                                <span class="detail-value">@details["TestingObjectives"].ToString().Replace("-", " ").ToTitleCase()</span>
                                            </div>
                                            if (details.ContainsKey("ComplianceRequirements"))
                                            {
                                                <div class="detail-group">
                                                    <span class="detail-label">📋 Compliance</span>
                                                    <span class="detail-value">@details["ComplianceRequirements"].ToString().ToUpper()</span>
                                                </div>
                                            }
                                            if (details.ContainsKey("PreferredStartDate"))
                                            {
                                                <div class="detail-group">
                                                    <span class="detail-label">📅 Start Date</span>
                                                    <span class="detail-value">@DateTime.Parse(details["PreferredStartDate"].ToString()).ToString("MMM dd, yyyy")</span>
                                                </div>
                                            }
                                        }
                                        // Handle Network Setup Service
                                        else if (details.ContainsKey("RequestType") && details.ContainsKey("Department"))
                                        {
                                            <div class="detail-group">
                                                <span class="detail-label">📡 Request Type</span>
                                                <span class="detail-value">@details["RequestType"].ToString().Replace("Connection", " Connection").ToTitleCase()</span>
                                            </div>
                                            <div class="detail-group">
                                                <span class="detail-label">🏢 Department</span>
                                                <span class="detail-value">@details["Department"].ToString()</span>
                                            </div>
                                            <div class="detail-group">
                                                <span class="detail-label">📍 Location</span>
                                                <span class="detail-value">@details["Location"].ToString()</span>
                                            </div>
                                            if (details.ContainsKey("NumberOfPorts"))
                                            {
                                                <div class="detail-group">
                                                    <span class="detail-label">🔌 Ports</span>
                                                    <span class="detail-value">@details["NumberOfPorts"].ToString() ports</span>
                                                </div>
                                            }
                                            if (details.ContainsKey("NetworkSpeed"))
                                            {
                                                <div class="detail-group">
                                                    <span class="detail-label">⚡ Speed</span>
                                                    <span class="detail-value">@details["NetworkSpeed"].ToString().Replace("Speed", "").Replace("Mbps", " Mbps").Replace("Gbps", " Gbps")</span>
                                                </div>
                                            }
                                            if (details.ContainsKey("IsUrgent") && details["IsUrgent"]?.ToString() == "True")
                                            {
                                                <div class="detail-group">
                                                    <span class="detail-label">🚨 Urgent</span>
                                                    <span class="detail-value">Yes</span>
                                                </div>
                                            }
                                        }
                                        // Handle Mobile & Web Development Service
                                        else if (details.ContainsKey("ProjectName") && details.ContainsKey("Platform"))
                                        {
                                            <div class="detail-group">
                                                <span class="detail-label">📱 Project</span>
                                                <span class="detail-value">@details["ProjectName"].ToString()</span>
                                            </div>
                                            <div class="detail-group">
                                                <span class="detail-label">💻 Platform</span>
                                                <span class="detail-value">@details["Platform"].ToString().Replace("-", " ").ToTitleCase()</span>
                                            </div>
                                            <div class="detail-group">
                                                <span class="detail-label">🔧 Type</span>
                                                <span class="detail-value">@details["DevelopmentType"].ToString().Replace("-", " ").ToTitleCase()</span>
                                            </div>
                                            if (details.ContainsKey("PreferredStartDate"))
                                            {
                                                <div class="detail-group">
                                                    <span class="detail-label">📅 Start Date</span>
                                                    <span class="detail-value">@DateTime.Parse(details["PreferredStartDate"].ToString()).ToString("MMM dd, yyyy")</span>
                                                </div>
                                            }
                                        }
                                        // Handle Contact Information (Common for all services)
                                        else if (details.ContainsKey("PrimaryContactName"))
                                        {
                                            <div class="detail-group">
                                                <span class="detail-label">👤 Contact</span>
                                                <span class="detail-value">@details["PrimaryContactName"].ToString()</span>
                                            </div>
                                        }
                                    }
                                    catch
                                    {
                                        // If JSON parsing fails, show truncated text
                                        var shortText = requestDetails.Length > 50 ? requestDetails.Substring(0, 50) + "..." : requestDetails;
                                        <div class="detail-group">
                                            <span class="detail-label">📄 Details</span>
                                            <span class="detail-value">@shortText</span>
                                        </div>
                                    }
                                }
                            }

                            <div class="order-actions">
                                <button class="btn-tech btn-primary" onclick="viewOrderDetails(@order.request_id)" aria-label="View details for order @order.request_id">
                                    <i class="fas fa-eye tech-icon" aria-hidden="true"></i>
                                    View Details
                                </button>

                                @if (order.status_name?.ToLower() == "pending" || order.status_name?.ToLower() == "submitted")
                                {
                                    <button class="btn-tech" onclick="editOrder(@order.request_id)" aria-label="Edit request for order @order.request_id">
                                        <i class="fas fa-edit tech-icon" aria-hidden="true"></i>
                                        Edit Request
                                    </button>
                                }

                                @if (order.status_name?.ToLower() == "completed") 
                                {
                                    <button class="btn-tech" onclick="downloadReceipt(@order.request_id)" aria-label="Download receipt for order @order.request_id">
                                        <i class="fas fa-download tech-icon" aria-hidden="true"></i>
                                        Download
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Enhanced Empty State -->
            <div class="empty-state" role="alert">
                <div class="empty-icon">
                    <i class="fas fa-server" aria-hidden="true"></i>
                </div>
                <h2 class="empty-title">No Service Orders Found</h2>
                <p class="empty-subtitle">You haven't placed any service orders yet. Start by exploring our comprehensive IT solutions.</p>
                <a href="@Url.Action("Services", "Home")" class="btn-tech btn-primary" aria-label="Browse IT services">
                    <i class="fas fa-plus tech-icon" aria-hidden="true"></i>
                    Browse Services
                </a>
            </div>
        }
    </div>
</div>

<!-- Enhanced Modal for Order Details -->
<div id="orderDetailsModal" class="modal" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">Order Details</h3>
            <button class="modal-close" onclick="closeOrderModal()" aria-label="Close modal">×</button>
        </div>
        <div class="modal-body" id="orderDetailsContent">
            <!-- Content loaded via AJAX -->
        </div>
    </div>
</div>

<script>
    // Enhanced filter functionality with smooth animations
    const statusFilter = document.getElementById('statusFilter');
    const priorityFilter = document.getElementById('priorityFilter');
    const ordersGrid = document.getElementById('ordersGrid');
    const tableHeader = document.getElementById('tableHeader');
    const viewButtons = document.querySelectorAll('.view-btn');

    // View switching functionality - Updated for horizontal default
    viewButtons.forEach(btn => {
        btn.addEventListener('click', () => {
            const view = btn.dataset.view;

            // Update active button
            viewButtons.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            // Apply view styles
            switchView(view);
        });
    });

    /* JavaScript function to update */
    function switchView(view) {
    const cards = ordersGrid.querySelectorAll('.order-card');

    // Reset classes
    ordersGrid.className = 'orders-grid';

    if (view === 'horizontal') {
        // Grid view (side by side)
        ordersGrid.classList.add('horizontal');
        tableHeader.style.display = 'none';

        cards.forEach(card => {
            card.classList.remove('vertical');
            card.querySelector('.card-content').style.display = 'block';
            card.querySelector('.table-row').style.display = 'none';
        });
    } else if (view === 'table') {
        ordersGrid.classList.add('table');
        tableHeader.style.display = 'grid';

        cards.forEach(card => {
            card.classList.remove('vertical');
            card.querySelector('.card-content').style.display = 'none';
            card.querySelector('.table-row').style.display = 'grid';
        });
    } else {
        // Vertical view (default - single column under header/filters)
        tableHeader.style.display = 'none';

        cards.forEach(card => {
            card.classList.add('vertical');
            card.querySelector('.card-content').style.display = 'block';
            card.querySelector('.table-row').style.display = 'none';

            // Add vertical classes for better spacing
            const elements = card.querySelectorAll('.order-header, .order-title, .order-details, .detail-group, .detail-value, .progress-bar, .order-description, .description-text, .order-actions, .btn-tech');
            elements.forEach(el => el.classList.add('vertical'));
        });
    }
}

    function filterOrders() {
        const statusValue = statusFilter.value.trim().toLowerCase();
        const priorityValue = priorityFilter.value.trim().toLowerCase();

        const orderCards = ordersGrid.querySelectorAll('.order-card');

        orderCards.forEach((card, index) => {
            // Get the data attributes and ensure they're properly cleaned
            let cardStatus = card.dataset.status?.trim().toLowerCase() || '';
            let cardPriority = card.dataset.priority?.trim().toLowerCase() || '';

            // Clean up any potential artifacts from Razor syntax
            cardStatus = cardStatus.replace(/\?\.\w+\(\)/g, ''); // Remove ?.tolower() artifacts
            cardPriority = cardPriority.replace(/\?\.\w+\(\)/g, '');

            const statusMatch = !statusValue || cardStatus === statusValue;
            const priorityMatch = !priorityValue || cardPriority === priorityValue;

            console.log(`ServiceOrders:${index + 1} cardStatus: [${cardStatus}], statusValue: [${statusValue}], StatusMatch: ${statusMatch}`);

            if (statusMatch && priorityMatch) {
                card.style.display = 'block';
                card.style.animation = `fadeIn 0.5s ease ${index * 0.05}s forwards`;
            } else {
                card.style.animation = 'none';
                card.style.display = 'none';
            }
        });
    }



    statusFilter.addEventListener('change', filterOrders);
    priorityFilter.addEventListener('change', filterOrders);

    // Enhanced order details modal with better UX
    function viewOrderDetails(requestId) {
        const modal = document.getElementById('orderDetailsModal');
        const content = document.getElementById('orderDetailsContent');

        // Show loading state
        content.innerHTML = '<div style="text-align: center; padding: 2rem; color: var(--text-secondary);"><i class="fas fa-spinner fa-spin" style="font-size: 1.5rem; margin-bottom: 1rem;"></i><br>Loading order details...</div>';
        modal.style.display = 'flex';
        modal.classList.add('active');
        modal.setAttribute('aria-hidden', 'false');

        // Fetch order details from server
        fetch(`/Orders/GetOrderDetails/${requestId}`)
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to fetch order details');
                }
                return response.json();
            })
            .then(order => {
                // Call the enhanced display function
                displayOrderDetails(order);
            })
            .catch(error => {
                console.error('Error fetching order details:', error);
                content.innerHTML = `
                <div style="text-align: center; padding: 2rem; color: var(--error-color);">
                    <i class="fas fa-exclamation-triangle" style="font-size: 1.5rem; margin-bottom: 1rem;"></i>
                    <br>Failed to load order details. Please try again.
                    <br><br>
                    <button class="btn-tech btn-primary" onclick="viewOrderDetails(${requestId})">
                        <i class="fas fa-redo"></i> Retry
                    </button>
                </div>
            `;
            });
    }


    function displayOrderDetails(order) {
        let requestDetailsHtml = '';

        // Parse and display request details if they exist
        if (order.requestDetails) {
            try {
                const details = JSON.parse(order.requestDetails);

                // Handle Pentesting Service Details
                if (details.TargetSystem && details.TestingObjectives) {
                    requestDetailsHtml = `
                <div class="detail-section">
                    <h4>🔒 Penetration Testing Specifications</h4>
                    <p><strong>Target System:</strong> ${details.TargetSystem}</p>
                    <p><strong>Testing Objectives:</strong> ${details.TestingObjectives.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}</p>
                    ${details.ScopeDescription ? `<p><strong>Scope Description:</strong> ${details.ScopeDescription}</p>` : ''}
                    ${details.ComplianceRequirements ? `<p><strong>Compliance Requirements:</strong> ${details.ComplianceRequirements.toUpperCase()}</p>` : ''}
                </div>
                <div class="detail-section">
                    <h4>📅 Timeline</h4>
                    ${details.PreferredStartDate ? `<p><strong>Preferred Start Date:</strong> ${new Date(details.PreferredStartDate).toLocaleDateString()}</p>` : ''}
                    ${details.PreferredEndDate ? `<p><strong>Preferred End Date:</strong> ${new Date(details.PreferredEndDate).toLocaleDateString()}</p>` : ''}
                </div>
                <div class="detail-section">
                    <h4>👤 Contact Information</h4>
                    ${details.PrimaryContactName ? `<p><strong>Primary Contact:</strong> ${details.PrimaryContactName}</p>` : ''}
                    ${details.PrimaryContactEmail ? `<p><strong>Email:</strong> <a href="mailto:${details.PrimaryContactEmail}">${details.PrimaryContactEmail}</a></p>` : ''}
                    ${details.PrimaryContactPhone ? `<p><strong>Phone:</strong> <a href="tel:${details.PrimaryContactPhone}">${details.PrimaryContactPhone}</a></p>` : ''}
                </div>
                ${details.AdditionalNotes ? `<div class="detail-section"><h4>📝 Additional Notes</h4><p>${details.AdditionalNotes}</p></div>` : ''}
                `;
                }
                // Handle Network Setup Service Details
                else if (details.RequestType && details.Department) {
                    requestDetailsHtml = `
                <div class="detail-section">
                    <h4>🌐 Network Setup Specifications</h4>
                    <p><strong>Request Type:</strong> ${details.RequestType.replace(/([A-Z])/g, ' $1').trim()}</p>
                    <p><strong>Priority:</strong> ${details.Priority}</p>
                    <p><strong>Department:</strong> ${details.Department}</p>
                    <p><strong>Location:</strong> ${details.Location}</p>
                    ${details.RoomNumber ? `<p><strong>Room Number:</strong> ${details.RoomNumber}</p>` : ''}
                </div>
                <div class="detail-section">
                    <h4>🔧 Technical Specifications</h4>
                    ${details.NumberOfPorts ? `<p><strong>Number of Ports:</strong> ${details.NumberOfPorts}</p>` : ''}
                    ${details.PortType ? `<p><strong>Port Type:</strong> ${details.PortType}</p>` : ''}
                    ${details.NetworkSpeed ? `<p><strong>Network Speed:</strong> ${details.NetworkSpeed.replace('Speed', '').replace('Mbps', ' Mbps').replace('Gbps', ' Gbps')}</p>` : ''}
                    ${details.VlanAssignment ? `<p><strong>VLAN Assignment:</strong> ${details.VlanAssignment}</p>` : ''}
                    ${details.WirelessAccessRequired ? `<p><strong>Wireless Access Required:</strong> ${details.WirelessAccessRequired ? 'Yes' : 'No'}</p>` : ''}
                    ${details.SpecialSecurityRequired ? `<p><strong>Special Security Required:</strong> ${details.SpecialSecurityRequired ? 'Yes' : 'No'}</p>` : ''}
                    ${details.HardwareInstallationRequired ? `<p><strong>Hardware Installation:</strong> ${details.HardwareInstallationRequired ? 'Yes' : 'No'}</p>` : ''}
                </div>
                <div class="detail-section">
                    <h4>📅 Schedule & Preferences</h4>
                    ${details.RequestedCompletionDate ? `<p><strong>Requested Completion:</strong> ${new Date(details.RequestedCompletionDate).toLocaleDateString()}</p>` : ''}
                    ${details.PreferredInstallationTime ? `<p><strong>Installation Time:</strong> ${details.PreferredInstallationTime.replace(/([A-Z])/g, ' $1').trim()}</p>` : ''}
                    ${details.IsUrgent ? `<p><strong>Urgent Request:</strong> ${details.IsUrgent ? 'Yes' : 'No'}</p>` : ''}
                    ${details.AvailableDays && details.AvailableDays.length > 0 ? `<p><strong>Available Days:</strong> ${details.AvailableDays.join(', ')}</p>` : ''}
                </div>
                <div class="detail-section">
                    <h4>👤 Contact & Approval</h4>
                    ${details.PrimaryContactName ? `<p><strong>Primary Contact:</strong> ${details.PrimaryContactName}</p>` : ''}
                    ${details.PrimaryContactEmail ? `<p><strong>Email:</strong> <a href="mailto:${details.PrimaryContactEmail}">${details.PrimaryContactEmail}</a></p>` : ''}
                    ${details.PrimaryContactPhone ? `<p><strong>Phone:</strong> <a href="tel:${details.PrimaryContactPhone}">${details.PrimaryContactPhone}</a></p>` : ''}
                    ${details.ManagerName ? `<p><strong>Manager:</strong> ${details.ManagerName}</p>` : ''}
                    ${details.ManagerEmail ? `<p><strong>Manager Email:</strong> <a href="mailto:${details.ManagerEmail}">${details.ManagerEmail}</a></p>` : ''}
                </div>
                <div class="detail-section">
                    <h4>💼 Business Information</h4>
                    ${details.BusinessJustification ? `<p><strong>Business Justification:</strong> ${details.BusinessJustification}</p>` : ''}
                    ${details.BudgetCode ? `<p><strong>Budget Code:</strong> ${details.BudgetCode}</p>` : ''}
                    ${details.EquipmentDetails ? `<p><strong>Equipment Details:</strong> ${details.EquipmentDetails}</p>` : ''}
                </div>
                ${details.AdditionalNotes ? `<div class="detail-section"><h4>📝 Additional Notes</h4><p>${details.AdditionalNotes}</p></div>` : ''}
                `;
                }
                // Handle Mobile & Web Development Service Details
                else if (details.ProjectName && details.Platform) {
                    requestDetailsHtml = `
                <div class="detail-section">
                    <h4>📱 Development Project Specifications</h4>
                    <p><strong>Project Name:</strong> ${details.ProjectName}</p>
                    <p><strong>Project Description:</strong> ${details.ProjectDescription || 'N/A'}</p>
                    <p><strong>Platform:</strong> ${details.Platform.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}</p>
                    <p><strong>Development Type:</strong> ${details.DevelopmentType.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}</p>
                </div>
                <div class="detail-section">
                    <h4>📅 Project Timeline</h4>
                    ${details.PreferredStartDate ? `<p><strong>Preferred Start Date:</strong> ${new Date(details.PreferredStartDate).toLocaleDateString()}</p>` : ''}
                    ${details.PreferredEndDate ? `<p><strong>Preferred End Date:</strong> ${new Date(details.PreferredEndDate).toLocaleDateString()}</p>` : ''}
                </div>
                <div class="detail-section">
                    <h4>👤 Contact Information</h4>
                    ${details.PrimaryContactName ? `<p><strong>Primary Contact:</strong> ${details.PrimaryContactName}</p>` : ''}
                    ${details.PrimaryContactEmail ? `<p><strong>Email:</strong> <a href="mailto:${details.PrimaryContactEmail}">${details.PrimaryContactEmail}</a></p>` : ''}
                    ${details.PrimaryContactPhone ? `<p><strong>Phone:</strong> <a href="tel:${details.PrimaryContactPhone}">${details.PrimaryContactPhone}</a></p>` : ''}
                </div>
                ${details.AdditionalNotes ? `<div class="detail-section"><h4>📝 Additional Notes</h4><p>${details.AdditionalNotes}</p></div>` : ''}
                `;
                }
                // Fallback for unknown service types
                else {
                    requestDetailsHtml = `
                <div class="detail-section">
                    <h4>📋 Request Specifications</h4>
                    ${Object.entries(details).map(([key, value]) => {
                        if (typeof value === 'string' || typeof value === 'number' || typeof value === 'boolean') {
                            const displayKey = key.replace(/([A-Z])/g, ' $1').trim().replace(/\b\w/g, l => l.toUpperCase());
                            const displayValue = typeof value === 'boolean' ? (value ? 'Yes' : 'No') : value;
                            return `<p><strong>${displayKey}:</strong> ${displayValue}</p>`;
                        }
                        return '';
                    }).join('')}
                </div>
                `;
                }
            } catch (e) {
                // If JSON parsing fails, show raw text
                requestDetailsHtml = `<div class="detail-section"><h4>📄 Request Details</h4><p>${order.requestDetails}</p></div>`;
            }
        }

        const content = `
    <div class="detail-section">
        <h4>🔧 Service Information</h4>
        <p><strong>Service:</strong> ${order.serviceName || 'N/A'}</p>
        <p><strong>Category:</strong> ${order.categoryName || 'N/A'}</p>
        <p><strong>Description:</strong> ${order.serviceDescription || 'N/A'}</p>
    </div>
    <div class="detail-section">
        <h4>📋 Order Status</h4>
        <p><strong>Order ID:</strong> ${order.requestId}</p>
        <p><strong>Status:</strong> <span class="status-badge status-${order.statusName?.toLowerCase()}" style="background-color: ${order.statusColorCode}">${order.statusName}</span></p>
        <p><strong>Priority:</strong> ${order.priorityText}</p>
        <p><strong>Requested:</strong> ${order.formattedRequestedDate}</p>
        ${order.formattedCompletionDate ? `<p><strong>Completed:</strong> ${order.formattedCompletionDate}</p>` : ''}
        <p><strong>Amount:</strong> ${order.formattedTotalAmount}</p>
        ${order.approverFullName && order.approverFullName !== 'System' ? `<p><strong>Approved By:</strong> ${order.approverFullName}</p>` : ''}
    </div>
    ${requestDetailsHtml}
    ${order.notes ? `<div class="detail-section"><h4>📝 Internal Notes</h4><p>${order.notes}</p></div>` : ''}
`;

        document.getElementById('orderDetailsContent').innerHTML = content;
    }

    function closeOrderModal() {
        const modal = document.getElementById('orderDetailsModal');
        modal.classList.remove('active');
        setTimeout(() => {
            modal.style.display = 'none';
            modal.setAttribute('aria-hidden', 'true');
        }, 400);
    }

    function editOrder(requestId) {
        window.location.href = `@Url.Action("Edit", "ServiceRequest")?id=${requestId}`;
    }

    function downloadReceipt(requestId) {
        window.open(`@Url.Action("DownloadReceipt", "Profile")?requestId=${requestId}`, '_blank');
    }

    // Enhanced keyboard navigation
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            closeOrderModal();
        }
    });

    // Click outside modal to close
    document.getElementById('orderDetailsModal').addEventListener('click', (e) => {
        if (e.target === e.currentTarget) {
            closeOrderModal();
        }
    });

    // Initialize filters and add entrance animations
    document.addEventListener('DOMContentLoaded', () => {
        filterOrders();

        // Add staggered animation to cards
        const cards = document.querySelectorAll('.order-card');
        cards.forEach((card, index) => {
            card.style.animationDelay = `${index * 0.05}s`;
        });
    });
</script>