@model List<IT_Solution_Platform.Models.ServiceRequestDetailViewModel>
@using IT_Solution_Platform.Helpers
@using System.Text.Json
@using System.Text.Encodings.Web
@{
    ViewBag.Title = "Service Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        color: var(--primary-text);
    }
    /* Enhanced Container with proper spacing */
    .service-orders-container {
        background: var(--dark-bg);
        color: var(--primary-text);
        min-height: 100vh;
        padding: 2rem 1rem;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .container-services-orders {
        max-width: 1400px;
        margin: 0 auto;
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 2rem; /* This ensures consistent spacing between all sections */
    }


    /* Fixed Header with proper spacing and layout */
    .orders-header {
        background: var(--glass-bg);
        backdrop-filter: var(--glass-blur);
        border: 1px solid var(--border-light);
        border-radius: 20px;
        padding: 2rem 2.5rem;
        margin-bottom: 0; /* Remove this - let container gap handle it */
        box-shadow: var(--box-shadow);
        position: relative;
        overflow: hidden;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 2rem;
        min-height: auto;
        flex-shrink: 0; /* Prevent header from shrinking */
    }

        .orders-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), var(--primary-light), var(--accent-color));
            animation: shimmer 3s ease-in-out infinite;
        }

    @@keyframes shimmer {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.8;
        }
    }

    .header-content {
        flex: 1;
        min-width: 300px;
        max-width: 600px;
    }

    .header-title {
        color: var(--text-bright);
        font-size: 2.5rem;
        font-weight: 900;
        margin: 0 0 0.5rem 0;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: flex;
        align-items: center;
        gap: 1.8rem;
        line-height: 1.2;
    }

    .header-subtitle {
        color: var(--text-secondary);
        font-size: 1.1rem;
        font-weight: 400;
        margin: 0;
        opacity: 0.9;
        line-height: 1.4;
    }

    .header-actions {
        display: flex;
        gap: 1rem;
        align-items: center;
        flex-wrap: wrap;
        flex-shrink: 0;
    }

    /* Enhanced Filter Controls - positioned directly under header */
    .filter-controls {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 0; /* Remove this - let container gap handle it */
        flex-wrap: wrap;
        align-items: center;
        background: var(--glass-bg);
        backdrop-filter: var(--glass-blur);
        padding: 1.25rem 1.75rem;
        border-radius: 16px;
        border: 1px solid var(--border-light);
        width: 100%; /* Ensure full width */
        box-sizing: border-box;
        flex-shrink: 0; /* Prevent filters from shrinking */
    }

    .filter-select {
        background: var(--input-bg);
        border: 1px solid var(--border-light);
        border-radius: 10px;
        padding: 0.75rem 2.5rem 0.75rem 1.25rem;
        color: var(--text-primary);
        font-size: 0.95rem;
        font-weight: 500;
        transition: var(--transition);
        appearance: none;
        background-image: url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D%2212%22%20height%3D%228%22%20viewBox%3D%220%200%2012%208%22%20fill%3D%22none%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M1%201L6%206L11%201%22%20stroke%3D%22%2300e5ff%22%20stroke-width%3D%222%22%2F%3E%3C%2Fsvg%3E');
        background-repeat: no-repeat;
        background-position: right 1rem center;
        background-size: 12px;
        min-width: 160px;
        cursor: pointer;
    }

        .filter-select:focus {
            border-color: var(--border-focus);
            box-shadow: 0 0 15px var(--primary-glow);
            outline: none;
            transform: scale(1.02);
        }

        .filter-select:hover {
            border-color: var(--border-hover);
            background-color: var(--card-hover);
        }

    /* View Toggle Buttons - updated for horizontal default */
    .view-toggle {
        display: flex;
        background: var(--input-bg);
        border: 1px solid var(--border-light);
        border-radius: 12px;
        overflow: hidden;
    }

    .view-btn {
        padding: 0.75rem 1.25rem;
        background: transparent;
        border: none;
        color: var(--text-secondary);
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        font-weight: 500;
        white-space: nowrap;
    }

        .view-btn.active {
            background: var(--primary-color);
            color: var(--dark-bg);
            font-weight: 700;
        }

        .view-btn:hover:not(.active) {
            background: var(--card-hover);
            color: var(--text-primary);
        }

    /* Orders Grid - Default to Horizontal View */
    .orders-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        width: 100%;
        flex: 1; /* Take remaining space */
    }

        /* Orders Grid - Grid View (side by side cards) */
        .orders-grid.horizontal {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 1.5rem;
        }

        /* Orders Grid - Vertical View (enhanced single column) */
        .orders-grid.vertical {
            display: grid;
            grid-template-columns: 1fr;
            gap: 2rem;
        }


        /* Orders Grid - Table View */
        .orders-grid.table {
            display: block;
            --bs-table-color: white;
        }

    .table-header {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr 1fr 1fr;
        gap: 1rem;
        padding: 1rem 1.5rem;
        background: var(--card-bg);
        border: 1px solid var(--border-light);
        border-radius: 12px 12px 0 0;
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0;
        width: 100%;
        box-sizing: border-box;
    }

    .table-row {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr 1fr 1fr;
        gap: 1rem;
        padding: 1.5rem 1.5rem;
        background: var(--card-bg);
        border: 1px solid var(--border-light);
        border-top: none;
        transition: var(--transition);
        align-items: center;
    }

        .table-row:hover {
            background: var(--card-hover);
            border-color: var(--border-hover);
        }

        .table-row:last-child {
            border-radius: 0 0 12px 12px;
        }

    /* Enhanced Order Card - Default optimized for horizontal layout */
    .order-card {
        background: linear-gradient(145deg, var(--card-bg), rgba(13, 18, 29, 0.8));
        border: 1px solid var(--border-light);
        border-radius: 20px;
        padding: 1.5rem; /* Reduced from 2rem for horizontal */
        transition: var(--transition);
        position: relative;
        overflow: hidden;
    }

        .order-card.vertical {
            padding: 2rem;
        }

        .order-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(180deg, var(--primary-color), var(--primary-light));
            opacity: 0;
            transition: var(--transition);
        }

        .order-card::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, var(--primary-glow) 0%, transparent 70%);
            opacity: 0;
            transition: var(--transition);
            pointer-events: none;
        }

        .order-card:hover {
            background: linear-gradient(145deg, var(--card-hover), rgba(17, 22, 37, 0.9));
            border-color: var(--border-hover);
            transform: translateY(-6px);
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5), 0 0 30px var(--primary-glow);
        }

            .order-card:hover::before {
                opacity: 1;
            }

            .order-card:hover::after {
                opacity: 0.03;
            }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem; /* Reduced for horizontal */
        flex-wrap: wrap;
        gap: 1rem;
    }

        .order-header.vertical {
            margin-bottom: 1.5rem;
        }

    .order-title {
        color: var(--text-bright);
        font-size: 1.2rem; /* Reduced for horizontal */
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        line-height: 1.3;
    }

        .order-title.vertical {
            font-size: 1.4rem;
        }

    .order-id {
        color: var(--text-muted);
        font-size: 0.9rem;
        margin: 0.25rem 0 0 0;
        font-weight: 500;
    }

    /* Enhanced Status Badges */
    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.8px;
        border: 1px solid transparent;
        transition: var(--transition);
        position: relative;
        overflow: hidden;
    }

        .status-badge::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .status-badge:hover::before {
            left: 100%;
        }

    .status-submitted {
        background: rgba(0, 229, 255, 0.2) !important;
        color: var(--primary-color);
        border-color: rgba(0, 229, 255, 0.5);
        box-shadow: 0 0 10px rgba(0, 229, 255, 0.3);
    }

    .status-pending {
        background: rgba(255, 170, 0, 0.2) !important;
        color: var(--warning-color);
        border-color: rgba(255, 170, 0, 0.5);
        box-shadow: 0 0 10px rgba(255, 170, 0, 0.3);
    }

    .status-inprogress {
        background: rgba(0, 187, 255, 0.2) !important;
        color: var(--primary-dim);
        border-color: rgba(0, 187, 255, 0.5);
        box-shadow: 0 0 10px rgba(0, 187, 255, 0.3);
    }

    .status-completed {
        background: rgba(0, 255, 136, 0.2) !important;
        color: var(--success-color);
        border-color: rgba(0, 255, 136, 0.5);
        box-shadow: 0 0 10px rgba(0, 255, 136, 0.3);
    }

    .status-rejected {
        background: rgba(255, 68, 68, 0.2) !important;
        color: var(--error-color);
        border-color: rgba(255, 68, 68, 0.5);
        box-shadow: 0 0 10px rgba(255, 68, 68, 0.3);
    }

    /* Enhanced Order Details Grid - optimized for horizontal */
    .order-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

        .order-details.vertical {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

    .detail-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 0.75rem; /* Reduced for horizontal */
        background: var(--input-bg);
        border-radius: 10px;
        border: 1px solid var(--border-light);
        transition: var(--transition);
    }

        .detail-group.vertical {
            padding: 1rem;
        }

        .detail-group:hover {
            border-color: var(--border-hover);
            background: var(--card-hover);
            transform: translateY(-2px);
        }

    .detail-label {
        color: var(--text-muted);
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

    .detail-value {
        color: var(--text-primary);
        font-size: 0.9rem; /* Reduced for horizontal */
        font-weight: 600;
    }

        .detail-value.vertical {
            font-size: 1rem;
        }

    /* Enhanced Progress Bar */
    .progress-bar {
        width: 100%;
        height: 6px; /* Reduced for horizontal */
        background: var(--input-bg);
        border-radius: 4px;
        overflow: hidden;
        margin: 1rem 0; /* Reduced for horizontal */
        box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.3);
    }

        .progress-bar.vertical {
            height: 8px;
            margin: 1.5rem 0;
        }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
        border-radius: 4px;
        transition: var(--transition-long);
        position: relative;
        overflow: hidden;
    }

        .progress-fill::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            animation: progress-shimmer 2s infinite;
        }

    @@keyframes progress-shimmer {
        0% {
            transform: translateX(-100%);
        }

        100% {
            transform: translateX(100%);
        }
    }

    /* Enhanced Description */
    .order-description {
        background: var(--input-bg);
        border: 1px solid var(--border-light);
        border-radius: 12px;
        padding: 1rem; /* Reduced for horizontal */
        margin: 1rem 0; /* Reduced for horizontal */
        position: relative;
    }

        .order-description.vertical {
            padding: 1.5rem;
            margin: 1.5rem 0;
        }

        .order-description::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--primary-color);
            border-radius: 2px;
        }

    .description-text {
        color: var(--text-secondary);
        line-height: 1.5; /* Reduced for horizontal */
        margin: 0;
        font-size: 0.9rem; /* Reduced for horizontal */
    }

        .description-text.vertical {
            font-size: 1rem;
            line-height: 1.6;
        }

    /* Enhanced Action Buttons */
    .order-actions {
        display: flex;
        gap: 0.75rem; /* Reduced for horizontal */
        margin-top: 1rem; /* Reduced for horizontal */
        flex-wrap: wrap;
    }

        .order-actions.vertical {
            gap: 1rem;
            margin-top: 1.5rem;
        }

    .btn-tech {
        padding: 0.5rem 1rem; /* Reduced for horizontal */
        border: 1px solid var(--border-light);
        border-radius: 10px;
        background: var(--input-bg);
        color: var(--text-primary);
        text-decoration: none;
        font-size: 0.8rem; /* Reduced for horizontal */
        font-weight: 600;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

        .btn-tech.vertical {
            padding: 0.75rem 1.5rem;
            font-size: 0.9rem;
        }

        .btn-tech::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(0, 229, 255, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .btn-tech:hover::before {
            left: 100%;
        }

        .btn-tech:hover {
            background: var(--card-hover);
            border-color: var(--border-hover);
            color: var(--primary-color);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3), 0 0 15px var(--primary-glow);
        }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dim));
        border-color: var(--primary-color);
        color: var(--dark-bg);
        font-weight: 700;
        box-shadow: 0 0 15px var(--primary-glow);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary-light), var(--primary-color));
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4), 0 0 25px var(--primary-glow);
            color: var(--dark-bg);
            transform: translateY(-3px) scale(1.02);
        }

    /* Enhanced Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 3rem;
        background: linear-gradient(145deg, var(--card-bg), rgba(13, 18, 29, 0.8));
        border: 1px solid var(--border-light);
        border-radius: 20px;
        animation: fadeIn 0.8s ease;
        position: relative;
        overflow: hidden;
        width: 100%;
        box-sizing: border-box;
    }

        .empty-state::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color), var(--primary-color));
            animation: gradient-shift 3s ease-in-out infinite;
        }

    @@keyframes gradient-shift {
        0%, 100% {
            transform: translateX(-100%);
        }

        50% {
            transform: translateX(100%);
        }
    }

    .empty-icon {
        font-size: 4rem;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        opacity: 0.8;
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-8px);
        }
    }

    .empty-title {
        color: var(--text-bright);
        font-size: 1.8rem;
        font-weight: 800;
        margin: 0 0 1rem 0;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .empty-subtitle {
        color: var(--text-secondary);
        font-size: 1.1rem;
        margin: 0 0 2rem 0;
        line-height: 1.6;
    }

    /* Enhanced Priority Indicators */
    .priority-high {
        color: var(--error-color);
        text-shadow: 0 0 8px var(--error-glow);
    }

    .priority-medium {
        color: var(--warning-color);
        text-shadow: 0 0 8px rgba(255, 170, 0, 0.3);
    }

    .priority-low {
        color: var(--success-color);
        text-shadow: 0 0 8px var(--success-glow);
    }

    .priority-critical {
        color: var(--error-color);
        animation: critical-pulse 1.5s infinite;
        text-shadow: 0 0 12px var(--error-glow);
    }

    @@keyframes critical-pulse {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.7;
            transform: scale(1.05);
        }
    }

    .tech-icon {
        width: 1.2rem;
        /*height: 1.2rem;*/
        opacity: 0.9;
        filter: drop-shadow(0 0 3px currentColor);
    }

    /* Enhanced Modal */
    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(10px);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        opacity: 0;
        visibility: hidden;
        transition: all 0.4s ease;
    }

        .modal.active {
            opacity: 1;
            visibility: visible;
        }

    .modal-content {
        background: linear-gradient(145deg, var(--card-bg), rgba(13, 18, 29, 0.95));
        border: 1px solid var(--border-light);
        border-radius: 20px;
        max-width: 600px;
        width: 90%;
        max-height: 85vh;
        overflow-y: auto;
        transform: scale(0.8) translateY(50px);
        transition: transform 0.4s ease;
        box-shadow: 0 25px 60px rgba(0, 0, 0, 0.6), 0 0 40px var(--primary-glow);
    }

    .modal.active .modal-content {
        transform: scale(1) translateY(0);
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 2rem;
        border-bottom: 1px solid var(--border-light);
        background: var(--glass-bg);
        backdrop-filter: var(--glass-blur);
    }

        .modal-header h3 {
            color: var(--text-bright);
            font-size: 1.6rem;
            margin: 0;
            font-weight: 700;
        }

    .modal-close {
        background: none;
        border: none;
        color: var(--text-muted);
        font-size: 1.8rem;
        cursor: pointer;
        padding: 0.5rem;
        transition: var(--transition);
        border-radius: 6px;
    }

        .modal-close:hover {
            color: var(--primary-color);
            background: var(--input-bg);
            transform: scale(1.1);
        }

    .modal-body {
        padding: 2rem;
    }

    .detail-section {
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--border-light);
    }

        .detail-section:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

        .detail-section h4 {
            color: var(--primary-color);
            font-size: 1.3rem;
            margin: 0 0 1rem 0;
            font-weight: 700;
        }

        .detail-section p {
            color: var(--text-secondary);
            font-size: 1rem;
            margin: 0.75rem 0;
            line-height: 1.6;
        }

    /* Enhanced Responsive Design */
    @@media (max-width: 768px) {

        .container-services-orders {
            gap: 1.5rem; /* Reduce gap on mobile */
        }

        .service-orders-container {
            padding: 1rem 0.5rem;
        }

        .orders-header {
            padding: 1.5rem;
            flex-direction: column;
            align-items: flex-start;
        }

        .header-content {
            width: 100%;
            max-width: none;
        }

        .header-title {
            font-size: 2rem;
        }

        .header-subtitle {
            font-size: 1rem;
        }

        .header-actions {
            width: 100%;
            justify-content: flex-start;
        }

        .orders-grid {
            grid-template-columns: 1fr;
        }

        .table-header,
        .table-row {
            grid-template-columns: 1fr;
            gap: 0.5rem;
        }

        .order-details {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .order-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .order-actions {
            flex-direction: column;
            gap: 0.75rem;
        }

        .btn-tech {
            width: 100%;
            justify-content: center;
        }

        .filter-controls {
            flex-direction: column;
            gap: 1rem;
            padding: 1.25rem;
        }

        .filter-select {
            width: 100%;
            min-width: auto;
        }

        .modal-content {
            width: 95%;
