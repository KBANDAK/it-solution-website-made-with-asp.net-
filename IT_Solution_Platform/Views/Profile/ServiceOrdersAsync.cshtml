        console.log(order);

        // Parse and display request details if they exist
        // Fix: Use request_details (snake_case) instead of requestDetails (camelCase)
        if (order.request_details) {
            try {
                const details = JSON.parse(order.request_details);
                console.log(details);

                // Handle Pentesting Service Details
                if (details.TargetSystem && details.TestingObjectives) {
                    requestDetailsHtml = `
                <div class="detail-section">
